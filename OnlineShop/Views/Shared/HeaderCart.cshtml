    {
        <div>
            <a href="/dang-ky">Đăng ký</a>
            <a href="/dang-nhap">Đăng nhập</a>
        </div>
        <p>Giỏ hàng:</p>

        <div id="dd" class="wrapper-dropdown-2">
            @Model.Count sản phẩm
            <ul class="dropdown"></ul>
        </div>




    }
    else
    {
        <ul>
            <li>
                Xin chào: @session.UserName
            </li>
            <li>@Html.ActionLink("Thoát","Logout","User")</li>
        </ul>
